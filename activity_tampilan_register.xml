<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tampilanRegister"
    >


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/lblsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="SIGN UP"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtEmailLogin"
                android:layout_width="312dp"
                android:layout_height="49dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:hint="Input Email..."
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:text="Password"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtPasswordLogin"
                android:layout_width="312dp"
                android:layout_height="49dp"
                android:layout_marginTop="122dp"
                android:ems="10"
                android:hint="Input Password..."
                android:inputType="textPassword"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TextLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="185dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:elevation="0dp"
                android:minHeight="48dp"
                android:stateListAnimator="@null"
                android:text="Already have an account?"
                android:textColor="#686565"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="175dp"
                android:text="Confirm Password"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtConfirmPass"
                android:layout_width="312dp"
                android:layout_height="49dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="206dp"
                android:layout_marginEnd="3dp"
                android:backgroundTint="#5E5C5C"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Confirm Password.."
                android:textColor="#9E8F8F" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="268dp"
                android:text="REGISTER"
                app:backgroundTint="#0E0E0E"
                app:iconTint="#000000" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="474dp"
        app:srcCompat="@drawable/logochubb" />


</RelativeLayout>